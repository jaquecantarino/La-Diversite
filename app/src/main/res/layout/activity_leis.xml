<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".presentation.AcolhidaActivity">

    <TextView
        android:id="@+id/label_contato_emergencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/poppinssemibold"
        android:gravity="center"
        android:text="@string/leis_e_direitos"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_leis"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="163dp"
        android:src="@drawable/logo_leis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_contato_emergencia" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_leis"
        android:layout_width="350dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_leis">


        <LinearLayout
            android:id="@+id/ll_card_leis"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="21dp"
            android:paddingTop="15dp"
            android:paddingEnd="21dp"
            app:layout_constraintTop_toBottomOf="@+id/logo_acolhida"
            tools:layout_editor_absoluteX="31dp">

            <TextView
                android:id="@+id/leis_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/jusbrasil"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/publico_alvo_detalhe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/text_jus"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/link_jus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:textSize="12sp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/link_jus"
                android:textStyle="bold" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>